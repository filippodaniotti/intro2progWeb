<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SetUser</servlet-name>
        <servlet-class>it.unitn.disi.pips.web.app.SetUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckIfReadyToStart</servlet-name>
        <servlet-class>it.unitn.disi.pips.web.app.CheckIfReadyToStart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewWord</servlet-name>
        <servlet-class>it.unitn.disi.pips.web.app.NewWord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndGame</servlet-name>
        <servlet-class>it.unitn.disi.pips.web.app.EndGame</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetUser</servlet-name>
        <url-pattern>/SetUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckIfReadyToStart</servlet-name>
        <url-pattern>/CheckIfReadyToStart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewWord</servlet-name>
        <url-pattern>/NewWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndGame</servlet-name>
        <url-pattern>/EndGame</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
